<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#75BD78"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:layout_height="150dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




<LinearLayout
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/makh"
        android:text="mã kh"
        android:textColor="#D52F2F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tenkh"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="nguyễn văn phong"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/namsinhkh"
        android:text="năm sinh 2003"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/diachikh"
        android:text="địa chỉ: hà nội"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sdtkh"
        android:text="sdt: 0345432543"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_updatekh"
            android:src="@drawable/img_7"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/img_deletekh"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>