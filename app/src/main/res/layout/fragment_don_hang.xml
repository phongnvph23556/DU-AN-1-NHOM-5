<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.DonHangFragment">

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#75E47A"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backdonhang"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_back" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#FBFAFA"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="Đơn Hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/img_themdonhang"
            android:layout_marginLeft="120dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/img_11"
           />

    </LinearLayout>
    <SearchView
        android:id="@+id/search_viewdh"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/searchview_backgowd"
        android:elevation="10dp"
        android:iconifiedByDefault="false"
        android:queryHint="Tìm theo mã nhân viên..." />
    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/item_donhang"
        android:id="@+id/rcv_donhang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>