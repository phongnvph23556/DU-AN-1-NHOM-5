<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:orientation="vertical"
tools:context=".fragment.DonHangFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#75E47A"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/backtop"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_back" />
    <TextView
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#FBFAFA"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="Top Bán Chạy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Giay:Giay Nike"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF5722"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Số Lượng : 30"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF5722"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Vợt yonex astroxx"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF5722"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Số Lượng : 2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF5722"/>
    </LinearLayout>



</LinearLayout>
