<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C6C2C2"
    android:orientation="vertical"
    tools:context=".fragment.DonHangFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#75E47A"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/backdoimk"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/img_1" />
    <TextView
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#FBFAFA"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="Đổi Mật Khẩu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>






</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_lock_reset_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textColor="#015A05"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgroudedit"
            android:ems="10"
            android:hint="UserName"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhap mat khau cu"
            android:textColor="#015A05"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edMatkhau"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgroudedit"
            android:ems="10"
            android:hint="Mat khau cu"
            android:inputType="textPersonName"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mat khau moi"
            android:textColor="#015A05"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edPassmoi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgroudedit"
            android:ems="10"
            android:hint="Mat khau moi"
            android:inputType="textPersonName"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/textnhaplai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhap lai mat khau"
            android:textColor="#015A05"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ednhaplai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgroudedit"
            android:ems="10"
            android:hint="nhap lai"
            android:inputType="textPersonName"
            android:textAlignment="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnluu"
                style="@android:style/Widget.Button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/backbutton"
                android:text="Luu"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnhuy"
                android:layout_marginLeft="20dp"
                style="@android:style/Widget.Button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/backbutton"
                android:text="Huy"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
