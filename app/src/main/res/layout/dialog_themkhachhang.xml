<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B3B2B2"
    tools:context=".fragment.DonHangFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2CBF32"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Them Khach Hang"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/img_cancelkh"
            android:layout_gravity="center"
            android:src="@drawable/img_12"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tvHotenKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ tên khách hàng "
                android:textColor="#01651E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtHoTenKH"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/backgroudedit"
                android:ems="10"
                android:hint="Nhập họ tên hách hàng "
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvNamSinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Năm sinh "
                android:textColor="#01651E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNS"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/backgroudedit"
                android:ems="10"
                android:hint="Nhập năm sinh "
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvDiachiKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ  "
                android:textColor="#01651E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDiachiKH"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/backgroudedit"
                android:ems="10"
                android:hint="Nhập địa chỉ "
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại "
                android:textColor="#01651E"
                android:textSize="15dp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/edtSDTKH"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/backgroudedit"
                android:ems="10"
                android:hint="Nhập số điện thoại "
                android:inputType="textPersonName"
                android:textAlignment="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_themkh"
                    style="@android:style/Widget.Button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/backbutton"
                    android:text="Thêm" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnhuythemkh"
                    style="@android:style/Widget.Button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/backbutton"
                    android:text="Hủy" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>